@model BookViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Ekle</h1>

@using (Html.BeginForm(FormMethod.Post))
{
    <div class="container">
        <div class="form-group row">
            @Html.LabelFor(x => x.Id, "Sıra No", new { @class = "col-md-3 col-form-label" })
            @Html.TextBoxFor(x => x.Id, null, new { @type = "number", @class = "col-md-2" })
            @Html.ValidationMessageFor(x=>x.Id,null, new {@class = "col-md-2 label label-danger" })
        </div>
        <div class="form-group row">
            @Html.LabelFor(x => x.Name, "Kitap Adı", new { @class = "col-md-3 col-form-label" })
            @Html.TextBoxFor(x => x.Name, null, new { @class = "col-md-2" })
            @Html.ValidationMessageFor(x=>x.Name, null, new { @class = "col-md-2 label label-danger" })
        </div>
        <div class="form-group row">
            @Html.LabelFor(x => x.Author, "Yazar", new { @class = "col-md-3 col-form-label" })
            @Html.TextBoxFor(x => x.Author, null, new { @class = "col-md-2" })
            @Html.ValidationMessageFor(x => x.Author, null, new { @class = "col-md-2 label label-danger" })
        </div>
        <div class="form-group row">
            @Html.LabelFor(x => x.Publisher, "Publisher", new { @class = "col-md-3 col-form-label" })
            @Html.TextBoxFor(x => x.Publisher, null, new { @class = "col-md-2" })
            @Html.ValidationMessageFor(x => x.Publisher, null, new { @class = "col-md-2 label label-danger" })
        </div>
        <div class="form-group row">
            <button class="btn btn-primary" type="submit">Kaydet</button>
        </div>
    </div>
}
