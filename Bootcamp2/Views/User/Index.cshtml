@model List<UserViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="container">
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-info"><p>@TempData["Message"]</p></div>
    }
    <div class="row">
        <div class="col-md-1"><h3>Sıra No</h3></div>
        <div class="col-md-2"><h3>Adı</h3></div>
        <div class="col-md-2"><h3>Soyadı</h3></div>
        <div class="col-md-2"><h3>Eposta</h3></div>
        <div class="col-md-3"><h3>Doğum Tarihi</h3></div>
        <div class="col-md-2">@Html.ActionLink("Yeni Kullanıcı", "Add", "User", null, new { @class = "btn btn-primary" }) </div>
    </div>
    @foreach (var user in Model)
    {
        <div class="row">
            <div class="col-md-1"><p>@user.Id </p></div>
            <div class="col-md-2"><p>@user.Name </p></div>
            <div class="col-md-2"><p>@user.Surname </p></div>
            <div class="col-md-2"><p>@user.Email</p></div>
            <div class="col-md-2"><p>@user.BirthDate </p></div>
            <div class="col-md-2"><a class="btn btn-info" href="Get?id=@user.Id">Detay</a></div>
        </div>
    }
</div>